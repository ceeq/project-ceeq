<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" >

            <android.support.v4.view.PagerTitleStrip
                android:id="@+id/pager_title_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#efefef"
                android:padding="4dp"
                android:textColor="#0099cc" />
        </android.support.v4.view.ViewPager>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#353535"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/user_loader"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_details"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/user_image_drawer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/app_name"
                    android:paddingTop="4dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/user_id_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_image_drawer"
                    android:layout_alignLeft="@+id/user_name_drawer"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/user_name_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/user_image_drawer"
                    android:layout_toRightOf="@+id/user_image_drawer"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#959595" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#858585" />

            <ListView
                android:id="@+id/drawer_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:choiceMode="singleChoice"
                android:divider="#454545"
                android:dividerHeight="1dp" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="@string/navigate"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#707070" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#858585" />

            <ListView
                android:id="@+id/drawer_bottom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:choiceMode="singleChoice"
                android:divider="#454545"
                android:dividerHeight="1dp" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>