<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#dcdcdc"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/user_loader"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/user_image_drawer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/user_name_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_image_drawer"
                android:layout_toRightOf="@+id/user_image_drawer"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#606060" />

            <TextView
                android:id="@+id/user_id_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_image_drawer"
                android:layout_alignLeft="@+id/user_name_drawer"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#999999" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#aaaaaa" />

        <ListView
            android:id="@+id/drawer_action_list"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:scrollbars="vertical" >
        </ListView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>